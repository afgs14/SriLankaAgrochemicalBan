                              add = "jitter") +
  labs(title = "Data distribution by irrigation type",
       y = "Yield",
       x = "Zone") +
  theme_fivethirtyeight()
irrigation_type2
# 2.1.4. Harvest (Maha vs Yala) -------------------------------------------------
